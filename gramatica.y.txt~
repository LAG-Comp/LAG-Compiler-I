%{
%%

S : VAR ';' S
  | ATR ';' S 
  | IF S
  |
  ;

IF : _IF '(' LE ')' S _FI
   | _IF '(' LE ')' S _ELSE S _FI 
   ;

WHILE : _WHILE '(' LE ')' S _ELIHWOD
      | _DOWHILE S  '(' LE ')' _ELIHWOD
      ;

FOR : _FOR '(' VAR ';' LE ';' S ')' S _ROF

VAR : VAR ',' _ID
    | TIPO _ID
    ;
    
TIPO : _INT
     | _CHAR
     | _BOOL
     | _DOUBLE
     | _FLOAT
     | _STRING
     ;
  
ATR : _ID '=' E 
    ;

E : E '+' E   
  | E '-' E
  | E '*' E
  | E '/' E
  | F
  ;

F : _ID		
  | _CTE_INT 
  | _CTE_DOUBLE 
  | '(' E ')'  
  ;

%%
